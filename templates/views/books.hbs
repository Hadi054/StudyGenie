<body>
    
    <header>
        <div class="container">
        {{>navbar}}

<!--  -->
<section class="book-home">
    <div class="row">
        <div class="content">
            <h3>Book shelf</h3>
            <p>Find all your academic books here</p>
        </div>
            <div class="swiper book-slider">
            <div class="swiper-wrapper">
                {{#each popularbook}}
                <a href="#" class="swiper-slide"><img src="data:{{ this.img.contentType }};base64,{{ this.img.data }}"  class="book-img" id="book-img"> </a>
                {{/each}}
            </div>
            <img src="../images/book-shelf2.png" alt="" class="shelf">
          </div>
    </div>
       
         
</section>


 <!-- search filter section starts -->
 <div class="featured">Featured Books</div>
<div class="search-filter">
    <div class="filter">
        <!-- <div class="filter-label">Filter By</div> -->
        <div class="filter-class classes">
            {{#if classFilter}}
            <span class="filter-txt">{{classFilter}}</span>
            {{else}}
            <span class="filter-txt">All Classes</span>
            {{/if}}
            <i class="icon-filter ion-md-arrow-dropdown"></i>

            <div class="floating-drop-down-classes">

                <ul class="options">
                    {{!-- <li class="option">Class 1</li>
                    <li class="option">Class 2</li>
                    <li class="option">Class 3</li>
                    <li class="option">Class 4</li> --}}
                    <li class="option">Class 5</li>
                    <li class="option">Class 6</li>
                    <li class="option">Class 7</li>
                    <li class="option">Class 8</li>
                    <li class="option">HSC</li>
                    <li class="option">SSC</li>
                    <li class="option">All</li>
                </ul>
            </div>     
           
        </div>
       
        <div class="filter-class subjects">
            {{#if subFilter}}
            <span class="filter-txt">{{subFilter}}</span>
            {{else}}
            <span class="filter-txt">All Subjects</span>
            {{/if}}
            <i class="icon-filter ion-md-arrow-dropdown"></i>
                 
        <div class="floating-drop-down-subjects">
            <ul class="options">
                <li class="option">Physics</li>
                <li class="option">Chemistry</li>
                <li class="option">Biology</li>
                <li class="option">All</li>
            </ul>
        </div> 
        </div>
        
    </div>
    <form action="" class="search-form">
        <div class="search">

        <input type="search" name="" placeholder="Search books..." id="search-boxx" class="search-box" value="">
        <button id="search-action" onclick="searchAction(); return false;"><img src="images\icons\search.png" class="search-icon"  alt="" ></button>
        </div>
    </form>
</div>
</div>
