{{!-- {{#if isloggedin}} --}}
     <div class="card-container">
      {{#if isloggedin}}
        {{#each book}}
        
        <div class="card-section">
          
            <button class="icon-section" >
              {{#if this.isbookmarked}}
                <img src="images/icons/bookmark-active.png" alt="" class="bookmark-img" id="bookmark-img" data-id="{{this._id}}">
                {{else}}
                <img src="images/icons/bookmark.png" alt="" class="bookmark-img" id="bookmark-img" data-id="{{this._id}}">
              {{/if}}
            </button>
          
          
            <div class="image-section">
                <img  src="data:{{ this.img.contentType }};base64,{{ this.img.data }}" alt="" class="book-img" id="book-img">
            </div>
            <div class="download-section">
                <button  id="dld" onclick="download('{{this.name}}'); return false">{{this.name}}</button>
                <button id="read" onclick="readnow('{{this._id}}'); return false">Read Online</button>

            </div>
          
        </div>
      

        {{/each}}
        {{else}}
          {{#each book}}
           <div class="card-section">
          
            
          
          
            <div class="image-section">
                <img  src="data:{{ this.img.contentType }};base64,{{ this.img.data }}" alt="" class="book-img" id="book-img">
            </div>
            <div class="download-section">
                <button  id="dld" onclick="download('{{this._id}}'); return false">Download</button>
                <button id="read" onclick="readnow('{{this._id}}'); return false">Read Online</button>

            </div>
            </div>
                    {{/each}}

          {{/if
          }}
       
     </div>
{{!-- {{/if}} --}}
     <div>
        <nav class="pagination_wrapper">
            <ul class="pagination">
              <li class="page-item">
                <button class="page-link"  aria-label="Previous" name="action" value="prev" id="prevButton" onclick="prevp();">
                  &laquo; Prev
                  {{!-- <span class="sr-only">Previous</span> --}}
                </button>
              </li>
              <li class="page-item"><button class="page-link" id="page-no">{{currentPage}}</button></li>

              
              <li class="page-item">
                <button class="page-link"  aria-label="Next" name="action" value="next" id="nextButton" onclick="nextp();">
                  &raquo; Next
                  {{!-- <span class="sr-only">Next</span> --}}
                </button>
              </li>              
            </ul>
          </nav>
     </div>
          

